<h2 class="text-center" style="margin-bottom: 50px">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "form-horizontal") do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <div class="form-group">
      <%= f.label :name, autofocus: true, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :username, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :username, class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %> <i>(leave blank if you don't want to change it)</i>
      <div class="col-lg-10">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "margin-bottom: 30px" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class: "col-lg-2 control-label" %> <i>(we need your current password to confirm your changes)</i>
      <div class="col-lg-10">
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-3" style= "margin-bottom: 10px; padding-right: 8px; padding-left: 8px">
        <%= f.submit "Update", class: "btn btn-success btn-block" %>
      </div>
    </div>
  </fieldset>
<% end %>
<div class="row">
  <div class="col-lg-3 col-lg-offset-3">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-block", style: "margin-bottom: 10px" %>
  </div>
  <div class="col-lg-3">
    <%= link_to "Back", :back, class: "btn btn-primary btn-block" %>
  </div>
</div>
