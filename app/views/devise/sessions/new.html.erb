<h2 class="text-center" style="margin-bottom: 50px">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
  <fieldset>
    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">        
        <%= f.label :remember_me, class: "col-lg-2 control-label" %>  
        <div class="col-lg-10">
          <%= f.check_box :remember_me, style: "margin-bottom: 30px" %>
        </div>
      </div>
    <% end -%>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Log in", class: "btn btn-primary", style: "margin-bottom: 30px" %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </fieldset>
<% end %>  

