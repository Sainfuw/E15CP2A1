<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Username</th>
      <th>Email</th>
      <th>Created at</th>
      <th class="text-center">Admin</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= time_ago_in_words(user.created_at) %></td>
        <td>
          <% if user.admin %>
            <%= link_to 'Edit', edit_admin_path(user), class: 'btn btn-xs btn-success btn-block' %>
          <% else %>
            <%= link_to 'Edit', edit_admin_path(user), class: 'btn btn-xs btn-danger btn-block' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
