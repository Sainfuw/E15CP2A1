<h2 class="text-center" style="margin-bottom: 50px">Editing: <%= @user.name %></h2>

<%= form_with(model: @user, url: admin_path, local: true, class: "form-horizontal") do |f| %>

  <fieldset>
    <div class="form-group">
      <%= f.label :name, autofocus: true, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :name, class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :username, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.text_field :username, :disabled=>true, class: "form-control", style: "margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.email_field :email, autocomplete: "email", class: "form-control", style: "margin-bottom: 14px" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :admin, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= f.check_box :admin, style: "margin-top: 16px; margin-bottom: 30px" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Update", class: "btn btn-primary" %>
        <%= link_to "Back", :back, class: "btn btn-primary" %>
      </div>
    </div>
  </fieldset>
<% end %>
